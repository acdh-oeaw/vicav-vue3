{
	"name": "@acdh-oeaw/vicav-frontend",
	"private": true,
	"type": "module",
	"license": "MIT",
	"engines": {
		"node": "22.x",
		"pnpm": "9.x"
	},
	"packageManager": "pnpm@9.10.0+sha256.355a8ab8dbb6ad41befbef39bc4fd6b5df85e12761d2724bd01f13e878de4b13",
	"scripts": {
		"analyze": "nuxt analyze",
		"build": "run-s generate:api-client build:client",
		"build:client": "nuxt build --dotenv ./.env.local",
		"dev": "nuxt dev --dotenv ./.env.local",
		"format:check": "prettier . --cache --check --ignore-path ./.gitignore",
		"format:fix": "pnpm run format:check --write",
		"generate:api-client": "swagger-typescript-api --path \"https://raw.githubusercontent.com/acdh-oeaw/vicav-app-api/master/openapi.json\" --clean-output --name index.ts --output ./lib/api-client/",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "eslint . --cache",
		"lint:code:fix": "pnpm run lint:code:check --fix",
		"lint:styles:check": "stylelint \"./**/*.@(css|vue)\" --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "pnpm run lint:styles:check --fix",
		"postinstall": "nuxt prepare",
		"preinstall": "npx only-allow pnpm",
		"prepare": "run-s setup generate:api-client",
		"setup": "is-ci || simple-git-hooks",
		"start:preview": "nuxt preview --dotenv ./.env.local",
		"start": "node .output/server/index.mjs",
		"start:local": "dotenv -e .env.local -- pnpm run start",
		"test": "dotenv -e .env.local -- node checkenv.mjs && pnpm playwright install && pnpm validate",
		"test:e2e": "playwright test",
		"test:e2e:codegen": "playwright codegen",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:ui": "playwright test --ui",
		"types:check": "nuxt typecheck",
		"validate": "run-p format:check lint:check types:check test:e2e"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "^0.1.6",
		"@elastic/ecs-pino-format": "^1.5.0",
		"@fontsource-variable/roboto-flex": "^5.0.8",
		"@fortawesome/fontawesome-free": "^6.5.1",
		"@iconify/vue": "^4.1.2",
		"@nuxt/eslint": "^0.5.7",
		"@nuxt/test-utils": "^3.14.2",
		"@pinia/nuxt": "^0.5.1",
		"@tanstack/vue-query": "^5.4.1",
		"@tanstack/vue-table": "8.11.8",
		"@types/pino-http": "^5.8.4",
		"@vueuse/core": "^10.5.0",
		"@vueuse/nuxt": "^10.5.0",
		"autoprefixer": "^10.4.16",
		"class-variance-authority": "^0.7.0",
		"colorjs.io": "^0.4.5",
		"cva": "^1.0.0-beta.1",
		"is-ci": "^3.0.1",
		"leaflet": "^1.9.4",
		"lightgallery": "^2.7.2",
		"lucide-vue-next": "^0.289.0",
		"nanoid": "^5.0.3",
		"npm-run-all2": "^6.1.1",
		"nuxt": "^3.13.2",
		"pinia": "^2.1.7",
		"pino": "^9.2.0",
		"radix-vue": "^1.8.3",
		"swagger-typescript-api": "^13.0.3",
		"ts-error": "^1.0.6",
		"tw-elements": "^2.0.0",
		"v3-infinite-loading": "^1.3.1",
		"vue": "^3.5.6",
		"vue-router": "^4.2.5",
		"winbox": "^0.2.82",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^2.0.1",
		"@acdh-oeaw/eslint-config-nuxt": "^2.0.6",
		"@acdh-oeaw/eslint-config-playwright": "^2.0.2",
		"@acdh-oeaw/eslint-config-tailwindcss": "^2.0.1",
		"@acdh-oeaw/eslint-config-vue": "^2.0.4",
		"@acdh-oeaw/prettier-config": "^2.0.0",
		"@acdh-oeaw/stylelint-config": "^2.0.4",
		"@acdh-oeaw/tsconfig": "^1.2.0",
		"@axe-core/playwright": "^4.8.1",
		"@nuxt/devtools": "^1.0.0",
		"@playwright/test": "^1.39.0",
		"@tailwindcss/typography": "^0.5.10",
		"@tanstack/eslint-plugin-query": "^5.0.5",
		"@types/geojson": "^7946.0.12",
		"@types/leaflet": "^1.9.7",
		"@types/node": "^22.5.4",
		"@types/winbox": "0.2.3",
		"@vitest/coverage-v8": "^2.1.1",
		"ci-info": "^3.9.0",
		"cross-env": "^7.0.3",
		"dotenv-cli": "^7.4.2",
		"eslint": "^9.9.1",
		"eslint-config-flat-gitignore": "^0.3.0",
		"eslint-plugin-tailwindcss": "^3.17.4",
		"h3": "^1.11.1",
		"happy-dom": "^15.7.4",
		"lint-staged": "^15.0.2",
		"nitropack": "^2.9.6",
		"prettier": "^3.0.3",
		"schema-dts": "^1.1.2",
		"simple-git-hooks": "^2.9.0",
		"stylelint": "^16.9.0",
		"tailwindcss": "^3.4.11",
		"tailwindcss-animate": "^1.0.7",
		"type-fest": "^4.26.1",
		"typescript": "^5.6.2",
		"vitest": "^2.1.1",
		"vue-tsc": "^2.1.6"
	},
	"resolutions": {
		"vue": "3.5.6"
	},
	"pnpm": {
		"patchedDependencies": {
			"winbox@0.2.82": "patches/winbox@0.2.82.patch",
			"@types/winbox@0.2.3": "patches/@types__winbox@0.2.3.patch"
		}
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"lint-staged": {
		"*.vue": [
			"eslint --cache --fix",
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.@(js|ts)": [
			"eslint --cache --fix",
			"prettier --cache --write"
		],
		"*.css": [
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.!(css|js|ts|vue)": "prettier --cache --ignore-unknown --write"
	},
	"postcss": {
		"plugins": {
			"tailwindcss": {}
		}
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	}
}
