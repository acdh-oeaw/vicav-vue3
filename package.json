{
	"name": "@acdh-oeaw/vicav-frontend",
	"version": "0.8.0",
	"private": true,
	"type": "module",
	"license": "MIT",
	"engines": {
		"node": "22.x",
		"pnpm": "9.x"
	},
	"packageManager": "pnpm@9.10.0+sha256.355a8ab8dbb6ad41befbef39bc4fd6b5df85e12761d2724bd01f13e878de4b13",
	"scripts": {
		"analyze": "nuxt analyze",
		"build": "NUXT_PUBLIC_CURRENT_GIT_SHA=$(git describe --tags --always) && run-s generate:api-client build:client",
		"build:client": "nuxt build --dotenv ./.env.local",
		"dev": "NUXT_PUBLIC_CURRENT_GIT_SHA=$(git describe --tags --always) && nuxt dev --dotenv ./.env.local --host 127.0.0.1 --no-fork",
		"format:check": "prettier . --cache --check --ignore-path ./.gitignore",
		"format:fix": "pnpm run format:check --write",
		"generate:api-client": "swagger-typescript-api generate --path \"https://raw.githubusercontent.com/acdh-oeaw/vicav-app-api/master/openapi.json\" --clean-output --name index.ts --output ./lib/api-client/",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "pnpm run lint:code:check-no-cache --cache",
		"lint:code:check-no-cache": "eslint .",
		"lint:code:fix": "pnpm run lint:code:check --fix",
		"lint:styles:check": "pnpm run lint:styles:check-no-cache --cache",
		"lint:styles:check-no-cache": "stylelint \"./**/*.@(css|vue)\" --ignore-path ./.gitignore --ignore-path ./public/???.css",
		"lint:styles:fix": "pnpm run lint:styles:check --fix",
		"postinstall": "nuxt prepare",
		"preinstall": "npx only-allow pnpm",
		"prepare": "run-s setup generate:api-client",
		"setup": "is-ci || simple-git-hooks",
		"start:preview": "nuxt preview --dotenv ./.env.local",
		"start": "node .output/server/index.mjs",
		"start:local": "dotenv -e .env.local -- pnpm run start",
		"test": "dotenv -e .env.local -- node checkenv.mjs && pnpm playwright install && run-p format:check \"lint:*:check-no-cache\" types:check test:unit test:e2e",
		"test:e2e": "playwright test",
		"test:e2e:codegen": "playwright codegen",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:ui": "playwright test --ui",
		"test:unit": "vitest --run --typecheck --passWithNoTests",
		"types:check": "nuxt typecheck",
		"validate": "run-p format:check lint:check types:check test:unit",
		"heroku-postbuild": "pnpm run build && node heroku-postbuild-cleanup.js"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "^0.3.5",
		"@acdh-oeaw/style-variants": "^0.1.0",
		"@citation-js/core": "^0.7.18",
		"@citation-js/plugin-csl": "^0.7.18",
		"@elastic/ecs-pino-format": "^1.5.0",
		"@fontsource-variable/roboto-flex": "^5.2.7",
		"@fortawesome/fontawesome-free": "^6.7.2",
		"@iconify/vue": "^4.3.0",
		"@nuxt/eslint": "^1.9.0",
		"@nuxt/test-utils": "^3.19.2",
		"@pinia/nuxt": "^0.5.5",
		"@tanstack/vue-query": "^5.89.0",
		"@tanstack/vue-table": "8.11.8",
		"@types/pino-http": "^5.8.4",
		"@vueuse/core": "^13.9.0",
		"@vueuse/nuxt": "^13.9.0",
		"autoprefixer": "^10.4.21",
		"class-variance-authority": "^0.7.1",
		"colorjs.io": "^0.5.2",
		"cva": "1.0.0-beta.1",
		"h3-compression": "^0.3.2",
		"html-to-image": "^1.11.13",
		"is-ci": "^3.0.1",
		"leaflet": "^1.9.4",
		"lightgallery": "^2.8.3",
		"liqe": "^3.8.3",
		"lucide-vue-next": "^0.483.0",
		"nanoid": "^5.1.5",
		"npm-run-all2": "^6.2.6",
		"nuxt": "^3.19.2",
		"nuxt-svgo": "^4.2.6",
		"pinia": "^2.3.1",
		"pino": "^9.9.5",
		"radix-vue": "^1.9.17",
		"reka-ui": "^2.5.0",
		"swagger-typescript-api": "13.0.28",
		"tailwind-merge": "^2.6.0",
		"transliteration": "^2.3.5",
		"ts-error": "^1.0.6",
		"v3-infinite-loading": "^1.3.2",
		"vee-validate": "^4.15.1",
		"vue": "3.5.13",
		"vue-material-design-icons": "^5.3.1",
		"vue-router": "^4.5.1",
		"winbox": "^0.2.82",
		"zod": "^4.1.9"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^2.0.10",
		"@acdh-oeaw/eslint-config-node": "^2.0.10",
		"@acdh-oeaw/eslint-config-nuxt": "^2.0.16",
		"@acdh-oeaw/eslint-config-playwright": "^2.0.12",
		"@acdh-oeaw/eslint-config-tailwindcss": "^3.0.2",
		"@acdh-oeaw/eslint-config-vue": "^2.0.14",
		"@acdh-oeaw/prettier-config": "^2.0.1",
		"@acdh-oeaw/stylelint-config": "^2.3.0",
		"@acdh-oeaw/tsconfig": "^1.5.1",
		"@axe-core/playwright": "^4.10.2",
		"@nuxt/devtools": "2.3.0",
		"@playwright/test": "^1.55.0",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.13",
		"@tanstack/eslint-plugin-query": "^5.89.0",
		"@types/color": "^4.2.0",
		"@types/geojson": "^7946.0.16",
		"@types/leaflet": "^1.9.20",
		"@types/node": "^22.18.4",
		"@types/winbox": "0.2.3",
		"@vitest/coverage-v8": "^3.2.4",
		"ci-info": "^3.9.0",
		"cross-env": "^7.0.3",
		"dotenv": "^16.6.1",
		"dotenv-cli": "^8.0.0",
		"dotenv-expand": "^12.0.3",
		"eslint": "^9.35.0",
		"eslint-config-flat-gitignore": "^2.1.0",
		"h3": "^1.15.4",
		"happy-dom": "^15.11.7",
		"lint-staged": "15.2.7",
		"nitropack": "^2.12.6",
		"prettier": "^3.6.2",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"schema-dts": "^1.1.5",
		"simple-git-hooks": "^2.13.1",
		"stylelint": "^16.24.0",
		"tailwindcss": "^4.1.13",
		"tailwindcss-animate": "^1.0.7",
		"type-fest": "^4.41.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.0",
		"vitest": "^3.2.4",
		"vue-tsc": "^2.2.12"
	},
	"resolutions": {
		"vue": "3.5.13"
	},
	"pnpm": {
		"patchedDependencies": {
			"winbox@0.2.82": "patches/winbox@0.2.82.patch",
			"@types/winbox@0.2.3": "patches/@types__winbox@0.2.3.patch",
			"liqe": "patches/liqe.patch"
		}
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"lint-staged": {
		"*.vue": [
			"eslint --cache --fix",
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.@(js|ts)": [
			"eslint --cache --fix",
			"prettier --cache --write"
		],
		"*.css": [
			"stylelint --cache --fix --ignore-path public/tei.css --ignore-path public/odd.css",
			"prettier --cache --write"
		],
		"*.!(css|js|ts|vue)": "prettier --cache --ignore-unknown --write"
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	}
}
